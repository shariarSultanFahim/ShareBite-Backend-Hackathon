generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  phone      String    @unique
  username   String    @unique
  avatar     String? // URL to the avatar image
  passhash   String    @default("") // This is a placeholder for the password hash
  passphrase String    @default("") // This is a placeholder for the password salt for OTP generation
  role       AdminRole @default(ADMIN)
  auth_sessions                       AuthSession[]
  is_active  Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  acceptedDrops   Drop[] @relation("AcceptedByAdmin")
  assignedDrops   Drop[] @relation("AssignedToRider")
  rejectedDrops   Drop[] @relation("RejectedByAdmin")

  

}

model AuthSession {
  id         Int       @id @default(autoincrement())
  admin_id    Int
  admin       Admin     @relation(fields: [admin_id], references: [id], onDelete: Cascade) // On delete user, delete session
  token      String    @unique
  expired_at DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Donor {
  id           Int            @id @default(autoincrement())
  username     String         @unique
  avatar       String?
  email        String         @unique
  phone        String         @unique
  passhash     String         @default("")
  passphrase   String         @default("")
  address      String
  auth_sessions DonorSession[]
  is_active    Boolean        @default(true)
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
drops Drop[]
}


model DonorSession {
  id         Int       @id @default(autoincrement())
  donor_id   Int
  donor      Donor     @relation(fields: [donor_id], references: [id], onDelete: Cascade)
  token      String    @unique
  expired_at DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model Drop {
  id                 Int       @id @default(autoincrement())
  drop_type          DropType  @default(Food)
  images             String?
  description        String?
  assumed_person_for Int
  status             DropStatus @default(PENDING)

  donor_id           Int
  donor              Donor     @relation(fields: [donor_id], references: [id], onDelete: Cascade)

  created_at         DateTime  @default(now())
  updated_at         DateTime  @updatedAt

  // Multiple relations with Admin
  accepted_by        Int?
  acceptedByAdmin    Admin? @relation("AcceptedByAdmin", fields: [accepted_by], references: [id], onDelete: Cascade)

  assigned_rider     Int?
  assignedToRider    Admin? @relation("AssignedToRider", fields: [assigned_rider], references: [id], onDelete: Cascade)

  rejected_by        Int?
  rejectedByAdmin    Admin? @relation("RejectedByAdmin", fields: [rejected_by], references: [id], onDelete: Cascade)
}
model Hub {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  location   String
  contact    String
  hub_inventiry Hub_Inventory[]

  created_at DateTime  @default(now())
}

model Hub_Inventory {
  id         Int       @id @default(autoincrement())
  type       String
  person_for Int
  remarks    String?
  reference_id Int
  hub_id     Int
  hub        Hub @relation(fields: [hub_id], references: [id], onDelete: Cascade)
  is_transferred Boolean @default(false)
}
model Ngo {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  address    String
  phone      String
  email      String @unique
  icon       String?

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

}


enum AdminRole {
  ADMIN
  HUB_MANAGER
  RIDER
}
enum DropType{
  Food
  Medicine
  Cloth
}
enum DropStatus {
  PENDING
  ACCEPTED
  REJECTED
 PICKED
 DELIVERED
 CANCELLED
}
